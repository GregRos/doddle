{
  "extends": "../tsconfig.base.cjs.json",
  "references": [{ "path": "../src/tsconfig.cjs.json" }],
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "module": "preserve",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "esModuleInterop": true,
    "incremental": true,
    "tsBuildInfoFile": "../.buildinfo/test.tsbuildinfo",
    "paths": {
      "@lib": ["../src/index"],
      "@utils": ["../src/utils"],
      "@error": ["../src/errors/error"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["**/dist", "**/node_modules", "**/experimental-decorators/**"]
}
