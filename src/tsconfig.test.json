{
  "extends": "../tsconfig.base.cjs.json",
  "references": [{ "path": "./tsconfig.cjs.json" }],
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "module": "es2015",
    "target": "ES2020",
    "moduleResolution": "Bundler",
    "paths": {
      "@lib": ["./index"],
      "@utils": ["./utils"],
      "@error": ["./errors/error"]
    }
  },
  "include": ["**/*.test.ts", "**/*.helper.ts", "*.refactor.ts"],
  "exclude": ["**/dist", "**/node_modules"]
}
