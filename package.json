{
    "workspaces": [
        "packages/*"
    ],
    "private": true,
    "lint-staged": {
        "*.{ts,js,mjs,mts,cjs,cts}": "eslint --cache --fix",
        "*.{ts,js,mts,mjs,cts,cjs,css,md,yml,yaml,json}": "prettier --write"
    },
    "scripts": {
        "test": "jest",
        "test:coverage": "jest --coverage",
        "build": "tsc -b tsconfig.json",
        "watch": "tsc -b tsconfig.json --watch",
        "prepare": "husky install",
        "rebuild": "run-s clean build",
        "clean": "shx rm -rf packages/*/dist",
        "lint:fix": "prettier --write src/**/*.ts && eslint --fix src/**/*.ts",
        "lint:check": "prettier --check src/**/*.ts && eslint src/**/*.ts"
    },
    "devDependencies": {
        "@assertive-ts/core": "^2.1.0",
        "@gregros/eslint-config": "^0.4.0",
        "@types/jest": "^29.5.12",
        "@types/lodash": "^4.14.198",
        "@types/node": "^20.12.7",
        "@typescript-eslint/eslint-plugin": "^6.6.0",
        "@typescript-eslint/parser": "^6.6.0",
        "eslint": "^8.49.0",
        "husky": "^8.0.3",
        "jest": "^29.7.0",
        "lint-staged": "^14.0.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.2.5",
        "shx": "^0.3.4",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "tslib": "^2.6.2",
        "typescript": "^5.4.5"
    },
    "packageManager": "yarn@4.1.1"
}
